        <!--android:layout_gravity="right"-->
        <!--android:id="@+id/fbloginbutton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--&gt;</com.facebook.login.widget.LoginButton>-->


</LinearLayout>
