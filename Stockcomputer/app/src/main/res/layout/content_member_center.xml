<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jackpan.stockcomputer.Kotlin.MemberCenterActivity"
    tools:showIn="@layout/activity_member_center">
    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        >
        <LinearLayout
            android:layout_marginTop="150dp"
            android:id="@+id/activity_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/userimg"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                ></ImageView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="會員ID:"
                android:layout_marginLeft="20dp"
                ></TextView>
            <TextView
                android:id="@+id/userid"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="ID"
                android:layout_marginLeft="20dp"
                ></TextView>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="會員暱稱:"
                android:layout_marginLeft="20dp"
                ></TextView>
            <TextView
                android:id="@+id/username"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Name"
                android:layout_marginLeft="20dp"
                ></TextView>

            <TextView
                android:layout_marginLeft="20dp"

                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="會員等級:"
                ></TextView>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/userlv"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Lv"
                ></TextView>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/pointname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="會員點數:"
                    android:layout_marginLeft="20dp"
                    ></TextView>
                <TextView
                    android:layout_below="@+id/pointname"
                    android:id="@+id/userpoint"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="11111"
                    android:layout_marginLeft="20dp"
                    ></TextView>
                <Button
                    android:layout_centerInParent="true"
                    android:background="@mipmap/mo_gift"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/pointbutton"
                    />
            </RelativeLayout>


            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/userlogoutbtn"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="登出"
                ></Button>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
